<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="150dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                />

            <ImageView
                android:id="@+id/imageViewProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/guineos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDescripcionProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/textViewPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imageViewSubstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:srcCompat="@drawable/ic_indeterminate_check_box_black_24dp" />

                <TextView
                    android:id="@+id/textViewCantidad"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="Te"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:id="@+id/imageViewAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:srcCompat="@drawable/ic_add_box_black_24dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/buttonDeleteCarrito"
                android:layout_width="128dp"
                android:layout_height="44dp"
                card_view:srcCompat="@drawable/ic_remove_shopping_cart_black_24dp"
                />



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>